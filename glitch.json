{
  "install": "pip3 install -r app/requirements.txt",
  "start": "cd app; flask run",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "app_instrumented/requirements\\.txt$",
        "app/requirements\\.txt$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$"
      ]
    }
  }
}
